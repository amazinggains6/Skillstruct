<div id = "profile_top_left">
	<span id = "avatar"><%= image_tag @user.image_url.to_s %></span>
	<h3><%= @user.firstname + ' ' + @user.lastname %></h3>
	<h4><%= @user.city + ", " + @user.state %></h4>
	<br><%= render 'stats' %></br>
	<%= render 'follow_form' if signed_in? %>
	<%= link_to "Settings", edit_user_registration_path if signed_in? %>
	<p>Hours Taught: <%=@user.hours_taught %></p>
	<p>Hours Learned: <%=@user.hours_learned %></p>
</div>
<div id = "profile_right">
	<% @enrollments = current_user.enrollments %>
	<% @enrollments.each do |enrollment| %>
		<li><%= enrollment.course.name %>, <%= enrollment.active %></li>
	<% end %>
</div>
