<h2><%= @course.name %></h2>
<%= @course.user.firstname + 's' + ' course' %>
<%= link_to "Edit Course", edit_course_path(@course) %>
<%= link_to "Delete Course", @course, :method => :delete, :confirm => "Are you sure you want to delete this course?" %>

<%= form_for current_user.enrollments.build(:course_id => @course.id) do |f| %>
  <div><%= f.hidden_field :course_id %></div>
  <div class="actions"><%= f.submit "Enroll" %></div>
<% end %>

<p>
	<% @enrollments = current_user.enrollments %>
	<% @enrollments.each do |enrollment| %>
		<li><%= enrollment.course.name %>, <%= enrollment.active %></li>
	<% end %>
</p>