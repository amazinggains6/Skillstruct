<h2><%= @course.name %></h2>
<%= @course.user.firstname + 's' + ' course' %>
<%= link_to "Edit Course", edit_course_path(@course) %>
<%= link_to "Delete Course", @course, :method => :delete, :confirm => "Are you sure you want to delete this course?" %>

<%= render 'enroll_form' if signed_in? %>
<br></br>

<%= ((@course.endtime - @course.starttime)/3600).to_i %><p> hours</p>

<%= @course.enrollments.count %>

<%= image_tag @course.image_url(:thumb).to_s %>

